<Window x:Class="MenuHamburger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuHamburger"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="980"
        Background="#242424"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
    <Grid x:Name="Main_Window_Panel"
          Background="Transparent" MouseDown="Main_Window_Panel_MouseDown">

        <Border Background="#242424"
            Panel.ZIndex="0"/>

        <Border x:Name="Window_Edge"
                HorizontalAlignment="Stretch"
                BorderBrush="White"
                BorderThickness="0, 4, 0, 4"
                Panel.ZIndex="1"/>
    </Grid>
</Window>
